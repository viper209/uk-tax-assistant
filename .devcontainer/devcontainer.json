{
  "name": "Official Node.js Image",
  "image": "node:lts",
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "version": "latest"
    }
  },
  "forwardPorts": [5173],
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "settings": { 
        "editor.formatOnSave": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ]
    }
  }
}